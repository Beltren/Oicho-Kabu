<div id="content">
    <% for (let i = 1; i <= 4; i++) { %>
    <div class="card">
        <table id="card<%= i %>-table">
            <thead>
                <tr>
                    <th>Player</th>
                    <th>Points</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dynamically populated rows will go here -->
            </tbody>
        </table>
        <button class="bet-btn" data-card="<%= i %>">Bet</button>
        <div class="action-buttons">
            <button class="win-btn" data-card="<%= i %>">WIN</button>
            <button class="lose-btn" data-card="<%= i %>">LOSE</button>
        </div>
    </div>
    <% } %>
</div>
